#!/usr/bin/env bash

processName=$1
processPID=($(pidof ${processName}))

if [[ -n "$processPID" ]]; then
    echo "****************************************************************"
    printf "    kill ${processName}    "
    echo "****************************************************************"
    kill $processPID
else
    echo "****************************************************************"
    echo "    no ${processName} is running    "
    echo "****************************************************************"
fi
